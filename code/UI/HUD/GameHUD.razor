@namespace TFS2
@using TFS2.UI;
@using Sandbox.UI;

<style>
    GameHUD {
        width: 100%;
        height: 100%;
        z-index: 0;
    }
</style>

<root>
     <!-- Player Vitals -->
    <Health></Health>
    <Ammo></Ammo>
    <Metal></Metal>
    <Ubercharge></Ubercharge>
    <TargetIDContainer></TargetIDContainer>
    <DamageNumbers></DamageNumbers>
    <DamageIndicators></DamageIndicators>

    <!-- Weapons -->
    <WeaponSelection></WeaponSelection>
    <Buildings></Buildings>
    <BuildPDAPanel></BuildPDAPanel>
    <DestroyPDAPanel></DestroyPDAPanel>
    <SniperScopeCharge></SniperScopeCharge>

    <!-- Game -->
    <WinPanel></WinPanel>
    <Alert></Alert>
    <TeamGoalDisplay></TeamGoalDisplay>
    <ObjectivesStatus></ObjectivesStatus>
    <Spectator></Spectator>
    <RoundStatusDisplay></RoundStatusDisplay>
    <ArenaWaitingForPlayers></ArenaWaitingForPlayers>
    <FreezeCameraPanel></FreezeCameraPanel>
    <ReadyUp></ReadyUp>
    <TauntMenu />

    <!-- Communications -->
    <VoiceMenu></VoiceMenu>
    <Scoreboard></Scoreboard>
    <TFKillFeed></TFKillFeed>
    <TFChatBox></TFChatBox>

    <TeamVoiceList/>
    <LocalVoiceStatus/>
    <!-- 
        TODO: Reimplement
        <VoiceWheel></VoiceWheel>
    -->
</root>

@code {
    public static GameHUD Instance { get; set; }

    public static bool Enabled
    {
        set
        {
            Instance.Style.Set("display", value ? "flex" : "none");
        }
    }

    public GameHUD()
    {
        Instance = this;
    }
}
