@using System
@using Sandbox;
@using Sandbox.MenuSystem;
@using Sandbox.UI;
@inherits Panel;
@namespace TFS2.Menu
@attribute [StyleSheet]

<root class="@SpecialClasses()" >
    <img style="background-image: url( avatar:@Member.Id )" class="avatar" />
    <label class="name">@Member.Name</label>
</root>

@code
{
    public Friend Member { get; set; }

    string SpecialClasses()
    {
        if (Member.IsMe) return "is-me";
        if (Member.IsFriend) return "is-friend";

        return "";
    }
}
